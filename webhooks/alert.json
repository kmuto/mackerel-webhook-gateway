      ]
    },
    "user": {
      "type": [
        "null",
        "object"
      ],
      "default": null,
      "title": "ユーザー情報",
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string",
          "title": "ユーザーID",
          "examples": [
            "USER_ID"
          ]
        },
        "screenName": {
          "type": "string",
          "title": "表示名",
          "examples": [
            "MY_NAME",
            "MY_EMAIL_ADDRESS"
          ]
        }
      },
      "examples": [
        null
      ]
    },
    "memo": {
      "type": "string",
      "title": "メモ",
      "examples": [
        "MY_MEMO",
        "MY_MEMO\nMY_MEMO2\nMY_MEMO3"
      ]
    },
    "roles": {
      "type": "array",
      "default": [],
      "title": "ロール情報",
      "items": {
        "type": "object",
        "title": "ロール詳細情報",
        "required": [
          "fullname",
          "serviceName",
          "roleName",
          "serviceUrl",
          "roleUrl"
        ],
        "additionalProperties": false,
        "properties": {
          "fullname": {
            "type": "string",
            "title": "サービスとロールの結合名",
            "examples": [
              "MY_SERVICE: MY_ROLE"
            ]
          },
          "serviceName": {
            "type": "string",
            "title": "サービス名",
            "examples": [
              "MY_SERVICE"
            ]
          },
          "roleName": {
            "type": "string",
            "title": "ロール名",
            "examples": [
              "MY_ROLE"
            ]
          },
          "serviceUrl": {
            "type": "string",
            "title": "サービスURL",
            "format": "uri",
            "examples": [
              "https://mackerel.io/orgs/MY_ORG/services/MY_SERVICE"
            ]
          },
          "roleUrl": {
            "type": "string",
            "title": "ロールURL",
            "format": "uri",
            "examples": [
              "https://mackerel.io/orgs/MY_ORG/services/MY_SERVICE#role=MY_ROLE"
            ]
          }
        },
        "examples": [
          {
            "fullname": "MY_SERVICE: MY_ROLE",
            "serviceName": "MY_SERVICE",
            "roleName": "MY_ROLE",
            "serviceUrl": "https://mackerel.io/orgs/MY_ORG/services/MY_SERVICE",
            "roleUrl": "https://mackerel.io/orgs/MY_ORG/services/MY_SERVICE#role=MY_ROLE"
          }
        ]
      },
      "examples": [
        [
          {
            "fullname": "MY_SERVICE: MY_ROLE",
            "serviceName": "MY_SERVICE",
            "roleName": "MY_ROLE",
            "serviceUrl": "https://mackerel.io/orgs/MY_ORG/services/MY_SERVICE",
            "roleUrl": "https://mackerel.io/orgs/MY_ORG/services/MY_SERVICE#role=MY_ROLE"
          }
        ]
      ]
    },
    "service": {
      "type": "object",
      "default": {},
      "title": "サービス情報",
      "required": [
        "name",
        "id",
        "orgId",
        "roles"
      ],
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string",
          "title": "サービス名",
          "examples": [
            "MY_SERVICE"
          ]
        },
        "memo": {
          "type": "string",
          "title": "メモ",
          "examples": [
            ""
          ]
        },
        "id": {
          "type": "string",
          "title": "サービスID",
          "examples": [
            "SERVICE_ID"
          ]
        },
        "orgId": {
          "type": "string",
          "title": "オーガニゼーションID",
          "examples": [
            "ORG_ID"
          ]
        },
        "roles": {
          "$ref": "#/definitions/roles"
        }
      },
      "examples": [
        {
          "name": "MY_SERVICE",
          "memo": "",
          "id": "SERVICE_ID",
          "orgId": "ORG_ID",
          "roles": [
            {
              "fullname": "MY_SERVICE: MY_ROLE",
              "serviceName": "MY_SERVICE",
              "roleName": "MY_ROLE",
              "serviceUrl": "https://mackerel.io/orgs/MY_ORG/services/MY_SERVICE",
              "roleUrl": "https://mackerel.io/orgs/MY_ORG/services/MY_SERVICE#role=MY_ROLE"
            }
          ]
        }
      ]
    },
    "host": {
      "type": "object",
      "title": "ホスト情報",
      "required": [
        "name",
        "isRetired",
        "id",
        "url",
        "status",
        "roles"
      ],
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string",
          "title": "ホスト名",
          "examples": [
            "MY_HOST"
          ]
        },
        "memo": {
          "$ref": "#/definitions/memo"
        },
        "isRetired": {
          "type": "boolean",
          "default": false,
          "title": "退役済みか",
          "examples": [
            false
          ]
        },
        "id": {
          "type": "string",
          "title": "ホストID",
          "examples": [
            "HOST_ID"
          ]
        },
        "url": {
          "type": "string",
          "title": "ホストURL",
          "format": "uri",
          "examples": [
            "https://mackerel.io/orgs/MY_ORG/hosts/HOST_ID"
          ]
        },
        "status": {
          "type": "string",
          "title": "ステータス",
          "enum": [
            "working",
            "standby",
            "maintenance",
            "poweroff"
          ]
        },
        "roles": {
          "$ref": "#/definitions/roles"
        }
      },
      "examples": [
        {
          "name": "MY_HOST",
          "memo": "MY_MEMO",
          "isRetired": false,
          "id": "HOST_ID",
          "url": "https://mackerel.io/orgs/MY_ORG/hosts/HOST_ID",
          "status": "working",
          "roles": [
            {
              "fullname": "MY_SERVICE: MY_ROLE",
              "serviceName": "MY_SERVICE",
              "roleName": "MY_ROLE",
              "serviceUrl": "https://mackerel.io/orgs/MY_ORG/services/MY_SERVICE",
              "roleUrl": "https://mackerel.io/orgs/MY_ORG/services/MY_SERVICE#role=MY_ROLE"
            }
          ]
        }
      ]
    }
  },
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$id": "https://mackerel.io/json/alert.json",
  "type": "object",
  "default": {},
  "title": "ルート",
  "required": [
    "orgName",
    "event",
    "alert",
    "user"
  ],
  "additionalProperties": false,
  "properties": {
    "orgName": {
      "type": "string",
      "title": "オーガニゼーション名",
      "examples": [
        "MY_ORG"
      ]
    },
    "event": {
      "type": "string",
      "title": "イベントの種類",
      "enum": [
        "alert"
      ]
    },
    "alert": {
      "type": "object",
      "title": "アラート",
      "required": [
        "id",
        "url",
        "openedAt",
        "closedAt",
        "createdAt",
        "status",
        "isOpen",
        "trigger",
        "monitorName"
      ],
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string",
          "title": "アラートID",
          "examples": [
            "ALERT_ID"
          ]
        },
        "url": {
          "type": "string",
          "title": "アラートURL",
          "format": "uri",
          "examples": [
            "https://mackerel.io/orgs/MY_ORG/alerts/ALERT_ID"
          ]
        },
        "openedAt": {
          "type": "integer",
          "title": "アラート発生epoch時間",
          "examples": [
            1692628521
          ]
        },
        "closedAt": {
          "type": [
            "null",
            "integer"
          ],
          "default": null,
          "title": "アラート終了epoch時間",
          "examples": [
            null,
            1692628521
          ]
        },
        "createdAt": {
          "type": "integer",
          "title": "アラート発生epoch時間ms(廃止予定)",
          "examples": [
            1692628521296
          ]
        },
        "status": {
          "type": "string",
          "title": "ステータス",
          "enum": [
            "warning",
            "critical",
            "ok",
            "unknown"
          ]
        },
        "isOpen": {
          "type": "boolean",
          "default": false,
          "title": "アラートがオープンのままか",
          "examples": [
            true
          ]
        },
        "trigger": {
          "type": "string",
          "title": "トリガー",
          "enum": [
            "monitor", "manual close"
          ]
        },
        "monitorName": {
          "type": "string",
          "title": "監視ルール名",
          "examples": [
            "CPU %"
          ]
        },
        "metricLabel": {
          "type": "string",
          "title": "メトリック名",
          "examples": [
            "cpu%",
            "custom.linux.users.users"
          ]
        },
        "metricValue": {
          "type": "integer",
          "title": "メトリック値",
          "examples": [
            1
          ]
        },
        "criticalThreshold": {
          "type": "integer",
          "title": "Critical条件閾値",
          "examples": [
            10
          ]
        },
        "warningThreshold": {
          "type": "integer",
          "title": "Warning条件閾値",
          "examples": [
            5
          ]
        },
        "monitorOperator": {
          "type": "string",
          "title": "演算子",
          "enum": [
            ">",
            "<"
          ]
        },
        "duration": {
          "type": "integer",
          "title": "平均値監視",
          "examples": [
            3
          ]
        }
      },
      "examples": [
        {
          "id": "ALERT_ID",
          "url": "https://mackerel.io/orgs/MY_ORG/alerts/ALERT_ID",
          "openedAt": 1692628521,
          "closedAt": null,
          "createdAt": 1692628521296,
          "status": "warning",
          "isOpen": true,
          "trigger": "monitor",
          "monitorName": "CPU %",
          "metricLabel": "cpu%",
          "metricValue": 6,
          "criticalThreshold": 10,
          "warningThreshold": 5,
          "monitorOperator": ">",
          "duration": 3
        }
      ]
    },
    "memo": {
      "$ref": "#/definitions/memo"
    },
    "user": {
      "$ref": "#/definitions/user"
    },
    "host": {
      "$ref": "#/definitions/host"
    },
    "service": {
      "$ref": "#/definitions/service"
    },
    "imageUrl": {
      "$ref": "#/definitions/imageUrl"
    }
  },
  "examples": [
    {
      "orgName": "MY_ORG",
      "event": "alert",
      "alert": {
        "id": "ALERT_ID",
        "url": "https://mackerel.io/orgs/MY_ORG/alerts/ALERT_ID",
        "openedAt": 1692628521,
        "closedAt": null,
        "createdAt": 1692628521296,
        "status": "warning",
        "isOpen": true,
        "trigger": "monitor",
        "monitorName": "CPU %",
        "metricLabel": "cpu%",
        "metricValue": 6,
        "criticalThreshold": 10,
        "warningThreshold": 5,
        "monitorOperator": ">",
        "duration": 3
      },
      "memo": "MY_MEMO\nMY_MEMO2",
      "user": null,
      "host": {
        "name": "MY_HOST",
        "memo": "MY_MEMO",
        "isRetired": false,
        "id": "HOST_ID",
        "url": "https://mackerel.io/orgs/MY_ORG/hosts/HOST_ID",
        "status": "working",
        "roles": [
          {
            "fullname": "MY_SERVICE: MY_ROLE",
            "serviceName": "MY_SERVICE",
            "roleName": "MY_ROLE",
            "serviceUrl": "https://mackerel.io/orgs/MY_ORG/services/MY_SERVICE",
            "roleUrl": "https://mackerel.io/orgs/MY_ORG/services/MY_SERVICE#role=MY_ROLE"
          }
        ]
      },
      "imageUrl": "https://mackerel.io/embed/public/alert/RANDOM_GRAPH_URL.png"
    }
  ]
}
